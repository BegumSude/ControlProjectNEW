
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<html>
<head>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    
<div class="row">
    <!--Öğretmenlerin Başarı Oranları-->
    <div class="col-5 grid-margin ">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Doughnut Chart</h4>
                <canvas id="doughnutChart" style="height:300px; width:300px;"></canvas>
            </div>
        </div>
    </div>


    <!--Öğrencilerin Genel Sıralaması-->
    <div class="col-7 grid-margin ">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Başarı Sıralaması</h4>
                <p class="card-description">

                </p>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Sıralama
                                </th>
                                <th>
                                    Öğrenci
                                </th>
                                <th>
                                    İlerleme Durumu
                                </th>
                                <th>
                                    Eğitmen
                                </th>


                            </tr>
                        </thead>

                        <tbody>

                            <tr>
                                <td class="py-1">
                                    1.
                                </td>
                                <td>
                                    <img class="py-0" src="~/Templates/Admin/template/images/faces/face5.jpg" alt="image" style="margin-right: 8px;" />
                                    Belinay Dinlemez

                                </td>
                                <td style="text-align: center;">
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: 95%;" aria-valuenow="95" aria-valuemin="0" aria-valuemax="100">%95</div>
                                    </div>
                                </td>
                                <td>
                                    Erhan Hoca
                                </td>

                            </tr>

                        </tbody>
                    </table>
                </div>       
                  </div>       
                  </div>       
                  </div>       




</body>
</html>


<!--Doughnut chart js-->
<script>
    var ctx = document.getElementById('doughnutChart').getContext('2d');
    var doughnutChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: ['Münevver Hoca', 'Murat Hoca', 'Buse Nur Hoca','Erhan Hoca', 'Abdullah Hoca', 'Fatih Hoca'],
            datasets: [{
                labels: ['Pink', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
                data: [15, 20, 10, 25, 20, 10],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.5)',
                    'rgba(54, 162, 235, 0.5)',
                    'rgba(255, 206, 86, 0.5)',
                    'rgba(75, 192, 192, 0.5)',
                    'rgba(153, 102, 255, 0.5)',
                    'rgba(255, 159, 64, 0.5)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 0.5)',
                    'rgba(54, 162, 235, 0.5)',
                    'rgba(255, 206, 86, 0.5)',
                    'rgba(75, 192, 192, 0.5)',
                    'rgba(153, 102, 255, 0.5)',
                    'rgba(255, 159, 64, 0.5)'
                ],
                borderWidth: 2
            }]
        },
        options: {
            responsive: true,
            animation: {
                animateScale: true,
                animateRotate: true
            },
          
        }
    });
</script>